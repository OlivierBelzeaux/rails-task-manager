<div class="container">
<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li style="list-style: none">
    <input type="checkbox" name="<%= task.title %>" id="<%= task.id %>" <% if task.completed %>checked<% end %>>
      <%= link_to task.title, task_path(task.id) %>
  </li>
  <% end %>
</ul>
<hr>
<%= link_to "Add a new task", new_path, class:'btn btn-primary' %>
</div>
